{
  "name": "vue-modal-dialogs",
  "version": "0.0.1",
  "description": "Promisify dialogs in Vue.js",
  "main": "dist/vue-modal-dialogs.esm.js",
  "module": "dist/vue-modal-dialogs.esm.js",
  "typings": "vue-modal-dialogs.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src",
    "vue-modal-dialogs.d.ts"
  ],
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "production": "./src/index.ts",
      "import": "./dist/index.js"
    },
    "./create": {
      "development": "./src/create.ts",
      "production": "./src/create.ts",
      "import": "./dist/create.js"
    },
    "./utils": {
      "development": "./src/utils.ts",
      "production": "./src/utils.ts",
      "import": "./dist/utils.js"
    },
    "./wrapper": {
      "development": "./src/wrapper.ts",
      "production": "./src/wrapper.ts",
      "import": "./dist/wrapper.js"
    }
  },
  "scripts": {
    "build": "yarn run vite build",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "tsc:compile": "yarn tsc --build --incremental",
    "tsc:watch": "yarn tsc:compile --watch",
    "test": "NODE_ENV=test BABEL_ENV=test karma start test/karma.conf.js --single-run",
    "test:unit": "yarn vitest test/",
    "test:debug": "NODE_ENV=test BABEL_ENV=test DEBUG=1 karma start test/karma.conf.js --single-run=false --debug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hjkcai/vue-modal-dialogs.git"
  },
  "keywords": [
    "vue",
    "modal",
    "dialog",
    "dialogs",
    "promise",
    "promisify"
  ],
  "author": "Jingkun Hua <huajingkun1214@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hjkcai/vue-modal-dialogs/issues"
  },
  "homepage": "https://github.com/hjkcai/vue-modal-dialogs#readme",
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@babel/plugin-proposal-decorators": "7.24.7",
    "@babel/plugin-syntax-decorators": "^7.24.7",
    "@babel/preset-env": "7.24.7",
    "@eslint/js": "9.5.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/node": "20.14.7",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "@vitejs/plugin-vue2": "2.3.1",
    "@vitejs/plugin-vue2-jsx": "1.1.1",
    "@vue/test-utils": "1.3.6",
    "autoprefixer": "^6.6.0",
    "chai": "^4.1.2",
    "eslint": "9.5.0",
    "eslint-plugin-vue": "9.26.0",
    "jsdom": "24.1.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sinon-chai": "^1.3.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^3.0.0",
    "mocha": "^4.0.1",
    "puppeteer": "^0.12.0",
    "sinon": "^4.0.2",
    "sinon-chai": "^2.14.0",
    "typescript": "4.9.5",
    "vite": "4.3.3",
    "vite-plugin-babel": "^1.2.0",
    "vitest": "1.6.0",
    "vue": "^2.7.14",
    "vue-property-decorator": "^6.0.0",
    "vue-template-compiler": "^2.7.14"
  },
  "packageManager": "yarn@4.3.1"
}
